params {
  outdir = 'results'
  help = false

  single_end = false
  skip_trim_adapters = false
  readPaths = false
  qpcr_primers = false

  samQualThreshold = 20

  minDepth = 10

  // assumes about 20 mutations between 2 random samples
  // (this is an overestimate to increase sensitivity)
  bcftoolsCallTheta = 0.0006

  exclude_samples = ""

// iVar defaults
  ivarQualThreshold = 20
  ivarFreqThreshold = 0.6
  mpileupDepth = 0

// QUAST
  maxNs = 100
  minLength = 29000
  no_reads_quast = false

  kraken2_db = ""

// Nextstrain data
  gisaid_sequences = ""
  gisaid_metadata = "https://raw.githubusercontent.com/nextstrain/ncov/master/data/metadata.tsv"
  include_strains = "https://github.com/nextstrain/ncov/raw/master/config/include.txt"
  exclude_strains = "https://github.com/nextstrain/ncov/raw/master/config/exclude.txt"
  clades = "https://github.com/nextstrain/ncov/raw/master/config/clades.tsv"
  auspice_config = "https://github.com/nextstrain/ncov/raw/master/config/auspice_config.json"
  lat_longs = "https://github.com/nextstrain/ncov/raw/master/config/lat_longs.tsv"

// Output documentation
  multiqc_config = "$baseDir/assets/multiqc_config.yaml"

}

process {
  container = 'czbiohub/sc2-msspe'
  withLabel:'nextstrain' {
    container = 'nextstrain/base:latest'
  }
}

// Profiles
profiles {
  awsbatch { includeConfig 'conf/aws.config' }
  conda { process.conda = "$baseDir/environment.yaml" }
  debug { process.beforeScript = 'echo $HOSTNAME' }
  docker { docker.enabled = true }
  singularity { singularity.enabled = true }
  test { includeConfig 'conf/test.config' }
  test_fasta_reads { includeConfig 'conf/test_fasta_reads.config' }
  fasta_reads { includeConfig 'conf/fasta_reads.config' }
}
